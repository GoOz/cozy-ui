@require '../settings/palette'

$tabs-base
    .coz-tab-list
        border-bottom  1px solid silver

    .coz-tab
        display        inline-block
        padding        .625rem 1rem
        text-transform uppercase
        font-size      .8rem
        cursor         pointer
        color          coolGrey

        &:hover
            text-decoration none

    .coz-tab--active
        border-bottom 2px solid dodgerBlue
        color         dodgerBlue

    .coz-tab-panel
        padding-top 1.25rem
